{
  "expo": {
    "name": "Egregor",
    "slug": "egregor-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Egregor uses your location (optional) to show live regional participation heat map.",
        "NSUserNotificationUsageDescription": "Egregor sends gentle alerts for live circles, responses, and compassionate global events."
      }
    },
    "android": {
      "permissions": [
        "POST_NOTIFICATIONS",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      "expo-notifications"
    ],
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "REPLACE_WITH_EAS_PROJECT_ID_LATER"
      }
    }
  }
}
